<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/ingredient_list_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/colorDivisor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredient_list_fragment" />

        <FrameLayout
            android:id="@+id/step_list_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/step_detail_fragment"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>